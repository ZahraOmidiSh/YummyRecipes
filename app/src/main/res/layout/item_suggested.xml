<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--Card-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230mdp"
        android:layout_marginHorizontal="@dimen/_4mdp"
        android:layout_marginTop="@dimen/_5mdp"
        android:elevation="@dimen/_3mdp"
        app:cardCornerRadius="@dimen/_8mdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--Image-->
        <ImageView
            android:id="@+id/SuggestedImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_230mdp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />
        <!--Shadow-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_230mdp"
            android:alpha="0.9"
            android:background="@drawable/bg_shadow_image" />

    </com.google.android.material.card.MaterialCardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50mdp"
        android:padding="@dimen/_5mdp"
        app:layout_constraintTop_toBottomOf="@id/cardLay">
        <!--Title-->
        <TextView
            android:id="@+id/suggestedTitleTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10mdp"
            android:ellipsize="end"
            android:gravity="start|top"
            android:maxLines="2"
            tools:text="Show recipe name"
            android:textSize="@dimen/_14font_mdp"
            app:fontPath="fonts/roboto_bold.ttf"
            app:layout_constraintEnd_toStartOf="@id/suggestedTimeTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--Time-->
        <TextView
            android:id="@+id/suggestedTimeTxt"
            android:layout_width="@dimen/_70mdp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5mdp"
            android:gravity="center|top"
            android:paddingVertical="@dimen/_5mdp"
            tools:text="12 min"
            android:textSize="@dimen/_12font_mdp"
            app:drawableTint="@color/portland_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:drawableLeftCompat="@drawable/timer2"
            android:drawablePadding="@dimen/_2mdp"
            android:padding="@dimen/_3mdp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>