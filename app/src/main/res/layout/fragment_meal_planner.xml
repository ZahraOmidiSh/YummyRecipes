<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mealplanner.MealPlannerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/weekLay"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backward"
            style="@style/Meal_Planner_Arrows_Style"
            android:layout_marginEnd="@dimen/_10mdp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:layout_constraintBottom_toBottomOf="@id/weekTxt"
            app:layout_constraintEnd_toStartOf="@id/weekTxt"
            app:layout_constraintTop_toTopOf="@id/weekTxt" />

        <TextView
            android:id="@+id/weekTxt"
            style="@style/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3mdp"
            android:text="THIS WEEK"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/forward"
            style="@style/Meal_Planner_Arrows_Style"
            android:layout_marginStart="@dimen/_10mdp"
            android:rotation="180"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:layout_constraintBottom_toBottomOf="@id/weekTxt"
            app:layout_constraintStart_toEndOf="@id/weekTxt"
            app:layout_constraintTop_toTopOf="@id/weekTxt" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Line-->
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3mdp"
        android:alpha="0.4"
        android:background="@color/big_foot_feet"
        app:layout_constraintTop_toBottomOf="@id/weekLay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_20mdp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_80mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mondayLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_5mdp"
                android:paddingHorizontal="@dimen/_5mdp"
                android:paddingVertical="@dimen/_6mdp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/monday"
                    style="@style/Meal_Planner_Day_Style"
                    android:text="Monday"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!--meals List-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mealsList"
                    style="@style/MealPlanner_Recycler_View"
                    android:layout_marginTop="@dimen/_12mdp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/monday"
                    tools:listitem="@layout/item_recipe" />

                <!--Line 1-->
                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1mdp"
                    android:layout_marginTop="@dimen/_6mdp"
                    android:alpha="0.2"
                    android:background="@color/big_foot_feet"
                    app:layout_constraintTop_toBottomOf="@id/mealsList" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>