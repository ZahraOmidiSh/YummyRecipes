<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_130mdp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4mdp">
    <!--Card-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLay"
        android:layout_width="@dimen/_130mdp"
        android:layout_height="@dimen/_130mdp"
        app:cardCornerRadius="@dimen/_6mdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--Image-->
        <ImageView
            android:id="@+id/suggestedImg"
            android:layout_width="@dimen/_130mdp"
            android:layout_height="@dimen/_130mdp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:padding="@dimen/_20mdp"
            android:src="@drawable/salad"/>

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10mdp"
        app:layout_constraintTop_toBottomOf="@id/cardLay">
        <!--Title-->
        <TextView
            android:id="@+id/suggestedTitleTxt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30mdp"
            android:layout_marginHorizontal="@dimen/_8mdp"
            android:ellipsize="end"
            android:gravity="start|top"
            android:maxLines="2"
            android:textSize="@dimen/_9font_mdp"
            app:fontPath="fonts/roboto_bold.ttf"
            app:layout_constraintEnd_toStartOf="@id/suggestedTimeTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Show recipe name" />
        <!--Time-->
        <TextView
            android:id="@+id/suggestedTimeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_1mdp"
            android:gravity="center|top"
            android:padding="@dimen/_2mdp"
            android:paddingVertical="@dimen/_1mdp"
            android:textSize="@dimen/_7font_mdp"
            app:drawableLeftCompat="@drawable/timer2"
            app:drawableTint="@color/portland_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/suggestedTitleTxt"
            tools:text="12 min" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>