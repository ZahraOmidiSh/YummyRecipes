<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="@dimen/_3mdp"
    android:background="@drawable/bg_rounded_yellow"
    android:padding="@dimen/_5mdp"
    android:layout_height="wrap_content">
    <!--Card-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230mdp"
        android:elevation="@dimen/_3mdp"
        app:cardCornerRadius="@dimen/_8mdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--Image-->
        <View
            android:id="@+id/SuggestedImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_230mdp"
            android:background="@color/mediumGray" />

    </com.google.android.material.card.MaterialCardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50mdp"
        android:padding="@dimen/_5mdp"
        app:layout_constraintTop_toBottomOf="@id/cardLay">
        <!--Title-->
        <View
            android:id="@+id/suggestedTitleTxt"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30mdp"
            android:layout_marginStart="@dimen/_8mdp"
            android:layout_marginEnd="@dimen/_18mdp"
            android:background="@color/mediumGray"
            app:layout_constraintEnd_toStartOf="@id/suggestedTimeTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--Time-->
        <TextView
            android:id="@+id/suggestedTimeTxt"
            android:layout_width="@dimen/_30mdp"
            android:layout_height="@dimen/_20mdp"
            android:layout_marginHorizontal="@dimen/_5mdp"
            android:background="@color/mediumGray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>