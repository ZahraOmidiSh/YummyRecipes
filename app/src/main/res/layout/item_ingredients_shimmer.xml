<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8mdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!--Card-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLay"
        android:layout_marginStart="@dimen/_2mdp"
        android:layout_width="@dimen/_100mdp"
        android:layout_height="@dimen/_100mdp"
        app:cardCornerRadius="@dimen/_3mdp"
        android:elevation="@dimen/_5mdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--Image-->
        <View
            android:layout_width="match_parent"
            android:background="@drawable/bg_shimmer_gray"
            android:layout_height="match_parent" />


    </com.google.android.material.card.MaterialCardView>

    <!--Name-->
    <View
        android:layout_width="@dimen/_65mdp"
        android:layout_height="@dimen/_7mdp"
        android:background="@drawable/bg_shimmer_gray"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--Amount-->
    <View
        android:layout_width="@dimen/_35mdp"
        android:layout_height="@dimen/_7mdp"
        android:background="@drawable/bg_shimmer_gray"
        android:layout_marginTop="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>