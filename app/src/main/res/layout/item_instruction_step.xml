<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_20mdp">
    <!--Step-->
    <TextView
        android:id="@+id/stepTxt"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginTop="@dimen/_5mdp"
        android:background="@drawable/bg_rounded_number"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_14font_mdp"
        app:fontPath="fonts/atlas_bold.ttf"
        app:layout_constraintEnd_toEndOf="@id/timeTxt"
        app:layout_constraintStart_toStartOf="@id/timeTxt"

        app:layout_constraintTop_toTopOf="parent" />
    <!--Time-->
    <TextView
        android:id="@+id/timeTxt"
        android:layout_width="@dimen/_35mdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5mdp"
        android:gravity="center"
        android:textColor="@color/philippine_gray"
        android:textSize="@dimen/_8font_mdp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/stepTxt" />
    <!--Info-->
    <TextView
        android:id="@+id/infoTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginEnd="@dimen/_5mdp"
        android:lineSpacingExtra="@dimen/_5mdp"
        android:textSize="@dimen/_12font_mdp"
        app:fontPath="fonts/atlas_bold.ttf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/timeTxt"
        app:layout_constraintTop_toTopOf="@id/stepTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>