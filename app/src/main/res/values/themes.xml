<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.YummyRecipes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/portland_orange</item>
        <item name="colorPrimaryVariant">@color/baby_powder</item>
        <item name="colorOnPrimary">@color/baby_powder</item>
        <item name="android:background">@color/baby_powder</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <!--EditTextStyle-->
    <style name="EditTextStyle">
        <item name="drawableTint">@color/portland_orange</item>
        <item name="android:background">@drawable/edittext_background_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45mdp</item>
        <item name="android:layout_marginTop">@dimen/_22mdp</item>
        <item name="android:drawablePadding">@dimen/_6mdp</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:padding">@dimen/_2mdp</item>
    </style>

    <style name="Theme.YummyRecipes" parent="Base.Theme.YummyRecipes" />
</resources>