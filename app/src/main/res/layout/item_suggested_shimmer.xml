<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--Card-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLay"
        android:layout_marginStart="@dimen/_1mdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170mdp"
        app:cardCornerRadius="@dimen/_8mdp"
        android:elevation="@dimen/_5mdp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardUseCompatPadding="true"
        >
        <!--Image-->
        <View
            android:id="@+id/suggestedImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200mdp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/bg_shimmer_gray"/>
        <!--Title-->
        <View
            android:id="@+id/suggestedTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10mdp"
            android:layout_marginTop="@dimen/_125mdp"
            android:layout_marginHorizontal="@dimen/_15mdp"
            android:background="@drawable/bg_shimmer_white"
             />


    </com.google.android.material.card.MaterialCardView>




</androidx.constraintlayout.widget.ConstraintLayout>