<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mealplanner.MealPlannerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/weekLay"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10mdp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:layout_constraintBottom_toBottomOf="@id/weekTxt"
            app:layout_constraintEnd_toStartOf="@id/weekTxt"
            app:layout_constraintTop_toTopOf="@id/weekTxt"
            app:tint="@color/rose_ebony" />

        <TextView
            android:id="@+id/weekTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3mdp"
            android:text="THIS WEEK"
            android:textColor="@color/rose_ebony"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10mdp"
            android:rotation="180"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:layout_constraintBottom_toBottomOf="@id/weekTxt"
            app:layout_constraintStart_toEndOf="@id/weekTxt"
            app:layout_constraintTop_toTopOf="@id/weekTxt"
            app:tint="@color/rose_ebony" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--Line 1-->
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3mdp"
        android:alpha="0.4"
        android:background="@color/big_foot_feet"
        app:layout_constraintTop_toBottomOf="@id/weekLay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_20mdp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_80mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_6mdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/mondayCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_6mdp"
                android:layout_marginVertical="@dimen/_9mdp"
                android:background="@color/white"
                android:elevation="@dimen/_5mdp"
                android:paddingVertical="@dimen/_5mdp"
                app:cardCornerRadius="@dimen/_6mdp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10mdp"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:layout_marginBottom="@dimen/_26mdp"
                    android:text="Monday"
                    android:textColor="@color/philippine_gray"
                    android:textSize="@dimen/_14mdp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/tuesdayCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_6mdp"
                android:layout_marginVertical="@dimen/_6mdp"
                android:background="@color/white"
                android:elevation="@dimen/_5mdp"
                android:paddingVertical="@dimen/_5mdp"
                app:cardCornerRadius="@dimen/_6mdp"
                app:layout_constraintTop_toBottomOf="@id/mondayCardView">

                <TextView
                    android:id="@+id/tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10mdp"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:layout_marginBottom="@dimen/_26mdp"
                    android:text="Tuesday"
                    android:textSize="@dimen/_14mdp" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>