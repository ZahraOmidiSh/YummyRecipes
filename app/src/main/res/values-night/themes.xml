<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.YummyRecipes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/congo_pink</item>
        <item name="colorPrimaryVariant">@color/chinese_black</item>
        <item name="colorOnPrimary">@color/chinese_black</item>
        <item name="android:background">@color/chinese_black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!--EditTextStyle-->
    <style name="EditTextStyle">
        <item name="drawableTint">@color/congo_pink</item>
        <item name="android:background">@drawable/edittext_background_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45mdp</item>
        <item name="android:layout_marginTop">@dimen/_22mdp</item>
        <item name="android:drawablePadding">@dimen/_6mdp</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:padding">@dimen/_2mdp</item>
        <item name="colorError">@color/red</item>
    </style>
</resources>