<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchAllIngredientsFragment">
    <!--Close-->
    <ImageView
        android:id="@+id/closeImg"
        style="@style/AdvancedSearchButtons"
        android:rotation="45"
        android:src="@drawable/plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--Title-->
    <TextView
        android:id="@+id/titleTxt"
        style="@style/SearchTextView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:text="@string/searchbyingredients"
        android:textSize="@dimen/_18mdp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Search Common Ingredients-->
    <EditText
        android:id="@+id/searchEdt"
        style="@style/SearchEditTextStyle"
        android:layout_marginHorizontal="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_30mdp"
        android:drawableStart="@drawable/magnifying_glass"
        android:hint="@string/search_common_ingredients"
        android:textColorHint="@color/philippine_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTxt" />
    <!--Scroll View-->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/ingredientsScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="@dimen/_30mdp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:requiresFadingEdge="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchEdt">

        <!--Description-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ingredientsLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Suggested for you-->
            <TextView
                android:id="@+id/suggestedForYouTxt"
                style="@style/Search_Titles"
                android:layout_marginTop="@dimen/_20mdp"
                android:text="@string/suggested_for_you"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!--Ingredients List-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/expandedList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/suggestedForYouTxt"
                android:layout_marginTop="@dimen/_20mdp"
                android:clipToPadding="false"
                android:paddingHorizontal="@dimen/_5mdp"
                android:paddingBottom="@dimen/_80mdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <!--SearchWithIngredientsButton-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/SearchWithIngredientsButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40mdp"
        android:layout_marginHorizontal="@dimen/_20mdp"
        android:layout_marginBottom="@dimen/_30mdp"
        android:enabled="false"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/search_with_0_ingredients"
        android:textSize="@dimen/_10font_mdp"
        app:cornerRadius="@dimen/_25mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>